{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/kaylib",
    "version": "1.0.0",
    "description": "Utility library providing some useful base types and concepts",
    "keywords": [
        "typescript"
    ],
    "license": "MIT",
    "repository": "github:kayahr/kaylib",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "better-jest",
        "doc": "typedoc",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run -s clean && npm run -s compile",
        "test": "npm run -s cspell && npm run -s lint && npm run -s check"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "funding": {
        "url": "https://github.com/kayahr/kaylib?sponsor=1"
    },
    "jest": {
        "projects": [
            {
                "setupFilesAfterEnv": [
                    "jest-extended/all"
                ],
                "displayName": "node",
                "testEnvironment": "jest-environment-node-single-context",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "setupFilesAfterEnv": [
                    "jest-extended/all"
                ],
                "displayName": "electron",
                "runner": "@kayahr/jest-electron-runner",
                "testEnvironment": "@kayahr/jest-electron-runner/environment",
                "testEnvironmentOptions": {
                    "electron": {
                        "options": [
                            "js-flags=--expose-gc"
                        ]
                    }
                },
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "steal": {
        "paths": {
            "rxjs": "node_modules/rxjs/dist/bundles/rxjs.umd.js"
        }
    },
    "devDependencies": {
        "@kayahr/better-jest": "1.2.0",
        "@kayahr/eslint-config": "2.10.0",
        "@kayahr/jest-electron-runner": "29.10.0",
        "@kayahr/jest-matchers": "28.1.0",
        "@types/jest": "29.5.11",
        "@types/node": "20.10.3",
        "@typescript-eslint/eslint-plugin": "6.13.2",
        "@typescript-eslint/parser": "6.13.2",
        "cspell": "8.1.3",
        "es-observable-tests": "0.3.0",
        "eslint": "8.55.0",
        "eslint-plugin-deprecation": "2.0.0",
        "eslint-plugin-simple-import-sort": "10.0.0",
        "jest": "29.7.0",
        "jest-environment-node-single-context": "29.1.0",
        "jest-extended": "4.0.2",
        "rimraf": "5.0.5",
        "rxjs": "7.8.1",
        "source-map-support": "0.5.21",
        "steal": "2.3.0",
        "typedoc": "0.25.4",
        "typescript": "5.3.2"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.14",
        "tslib": "^2.6.2"
    }
}
