{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/kaylib",
    "version": "1.0.0",
    "description": "Utility library providing some useful base types and concepts",
    "keywords": [
        "typescript"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": "github:kayahr/kaylib",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "jest",
        "coverage": "jest --coverage",
        "doc": "typedoc --excludeNotExported --excludePrivate --mode file --includes doc --out doc/api src/main ../../node_modules/**/*.d.ts",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell '**/*'",
        "prepare": "npm run -s clean && npm run -s compile",
        "test": "npm run -s cspell && npm run -s lint && npm run -s check"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "funding": {
        "url": "https://github.com/kayahr/kaylib?sponsor=1"
    },
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testEnvironment": "jest-environment-node-single-context",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "displayName": "electron",
                "runner": "@kayahr/jest-electron-runner",
                "testEnvironment": "@kayahr/jest-electron-runner/environment",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@kayahr/eslint-config": "1.6.0",
        "@kayahr/jest-electron-runner": "4.0.0",
        "@kayahr/jest-matchers": "1.0.0",
        "@types/jest": "27.0.2",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "cspell": "5.11.1",
        "electron": "15.1.0",
        "es-observable-tests": "0.3.0",
        "eslint": "7.32.0",
        "eslint-plugin-deprecation": "1.2.1",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "jest": "27.2.4",
        "jest-environment-node-single-context": "27.2.0",
        "jest-extended": "0.11.5",
        "rimraf": "3.0.2",
        "source-map-support": "0.5.20",
        "steal": "2.2.4",
        "typedoc": "0.22.4",
        "typescript": "4.4.3"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.13",
        "tslib": "^2.3.1"
    }
}
